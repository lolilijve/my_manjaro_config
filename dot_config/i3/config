# 状态栏设置
bar {
    # 状态栏的打开形式
    status_command              py3status -c ~/.config/i3/i3status.conf
    # status_command		i3status	
    # 位置
    position                    bottom
    # 显示任务栏图标(primary：主屏，no：不显示)
    # tray_output                 primary
    # 分隔符
    separator_symbol            "  "
    # 工作区按钮
    workspace_buttons           yes
    # 是否隐藏工作区上的数字
    strip_workspace_numbers     no
    # 状态栏显示形式（hide为隐藏，按下mod键显示）
    mode                        hide

    # 色彩搭配
    colors {
        background          #212121
        statusline          #dddddd
        separator           #777777
        # class             border  backgr. text
        focused_workspace   #2b83a6 #2b83a6 #ffffff
        active_workspace    #212121 #212121 #ffffff
        inactive_workspace  #212121 #212121 #86888c
        urgent_workspace    #d64e4e #d64e4e #ffffff
        binding_mode        #229c56 #229c56 #ffffff
    }
}

